alias open=xdg-open

# only run xdg-mime if its installed
command -v xdg-mime && xdg-mime default vim.desktop text/plain

# load work specific zshrc - not in dotfiles
if [[ "$USER" -eq "bjubelirer" && -f "$HOME/.zshrc_dzyne" ]]; then
    . $HOME/.zshrc_dzyne
fi

